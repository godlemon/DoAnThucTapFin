@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
    {
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            <span id="username">@User.Identity?.Name</span>!
            @if (User.IsInRole("Admin"))
            {
                <span>(A)</span>
            }
        </a>
        <ul class="dropdown-menu small">
            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Hồ sơ</a></li>
            <li><a class="dropdown-item" href="/UserOrder/UserOrders">Đơn hàng</a></li>
            <li>
                <form class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <li><span class="nav-link">Chào, <a asp-area="Identity" asp-page="/Account/Login"> Đăng nhập </a> Hoặc <a asp-area="Identity" asp-page="/Account/Register"> đăng ký </a></span></li>
    }
